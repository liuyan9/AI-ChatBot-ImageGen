    #loading-icon {
  display: none;
  position: relative;
  width: 64px;
  height: 64px;
  margin: 0 auto;
}

#loading-icon:before,
#loading-icon:after {
  content: "";
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 3px solid transparent;
  animation: spin 1s linear infinite;
}

#loading-icon:before {
  border-top-color: #333;
  border-bottom-color: #333;
  animation-delay: 0.5s;
}

#loading-icon:after {
  border-left-color: #333;
  border-right-color: #333;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

